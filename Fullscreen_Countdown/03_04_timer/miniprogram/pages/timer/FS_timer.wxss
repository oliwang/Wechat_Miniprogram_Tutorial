/* miniprogram/pages/timer/FS_timer.wxss */
page {
  width:100%;
  height:100%;
}

.full_screen {
  width:100%;
  height:100%;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  font-size:40px;

  font-family: 'Lucida Console', monospace;
}

.timer {
  width: 70%;
  height:100%;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.time_ele {
  font-size: 60px;
}

.records_btns {
  width:30%;
  height:100%;

  display: flex;
  flex-direction: column;
}

.records {
  width:100%;
  height: 70%;

  overflow: scroll;
}

.lap_wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  font-size:20px;

  margin:0 10px;
}

.btns {
  width: 100%;
  height:30%;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.btn {
  font-size: 24px;

  padding: 10px 10px;

  border-radius: 3px;

}

